<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="360"
                android:centerColor="#e95a22"
                android:endColor="#ff00b5"
                android:gradientRadius="360"
                android:startColor="#36D7FF"
                android:type="sweep" />

            <stroke
                android:width="2dp"
                android:color="#42DAFF" />
        </shape>
    </item>
    <item
        android:bottom="1.2dp"
        android:top="1.2dp">
        <shape android:shape="rectangle" >
            <solid android:color="#C8F5FF" />
        </shape>
    </item>

</layer-list>