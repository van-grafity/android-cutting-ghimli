<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.CuttingOrderRecordDetailActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:elevation="16dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="14dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="14dp"
                        android:text="GL"
                        android:textAppearance="@style/TextAppearance.Light18"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="4dp" />

                    <TextView
                        android:id="@+id/etGlNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="14dp"
                        android:text="63777-01-04"
                        android:textAppearance="@style/TextAppearance.Bold24"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="14dp"
                        android:text="Serial Number"
                        android:textAppearance="@style/TextAppearance.Bold14" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="4dp" />

                    <TextView
                        android:id="@+id/etSerialNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="14dp"
                        android:text="COR-63063-00-DRTING FRL - ROYAL-006"
                        android:textAppearance="@style/TextAppearance.Bold16" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="14dp" />

                    <LinearLayout
                        android:paddingVertical="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_border_top_bottom_blue"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="14dp"
                            android:text="Color"
                            android:textAppearance="@style/TextAppearance.Bold14" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="4dp" />

                        <TextView
                            android:id="@+id/etColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="14dp"
                            android:text="BRIGHT WHITE"
                            android:textAppearance="@style/TextAppearance.Bold16"
                            android:textStyle="bold" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="14dp"
                            android:text="Style"
                            android:textAppearance="@style/TextAppearance.Bold14" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="4dp" />

                        <TextView
                            android:id="@+id/etStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="14dp"
                            android:text="63LSD233K"
                            android:textStyle="bold"
                            android:textAppearance="@style/TextAppearance.Bold16" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="14dp"
                            android:text="Buyer"
                            android:textAppearance="@style/TextAppearance.Bold14" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="4dp" />

                        <TextView
                            android:id="@+id/etBuyer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="14dp"
                            android:text="CHICOS"
                            android:textStyle="bold"
                            android:textAppearance="@style/TextAppearance.Bold16" />

                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="14dp"
                        android:text="Fabric Type"
                        android:textAppearance="@style/TextAppearance.Bold14" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="4dp" />

                    <TextView
                        android:id="@+id/etFabricType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="14dp"
                        android:gravity="center|left"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:text="Neck Binding"
                        android:textAppearance="@style/TextAppearance.Bold16" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="14dp"
                        android:text="Fabric Consumption"
                        android:textAppearance="@style/TextAppearance.Bold14" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="4dp" />

                    <TextView
                        android:id="@+id/etFabricConsumption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="14dp"
                        android:gravity="center|left"
                        android:maxLines="1"
                        android:textStyle="bold"
                        android:text="10%/90% Body"
                        android:textAppearance="@style/TextAppearance.Bold16" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginVertical="8dp"
                        android:background="#F1ECEC" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="14dp"
                        android:text="No. Laying Sheet"
                        android:textAppearance="@style/TextAppearance.Bold14" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="4dp" />

                    <TextView
                        android:id="@+id/etNoLayingSheet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="14dp"
                        android:gravity="center|left"
                        android:inputType="text"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:text="63777-00-01"
                        android:textAppearance="@style/TextAppearance.Bold16" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="14dp"
                        android:text="Table Number"
                        android:textAppearance="@style/TextAppearance.Bold14" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="4dp" />

                    <TextView
                        android:id="@+id/etTableNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="14dp"
                        android:gravity="center|left"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textStyle="bold"
                        android:text="1"
                        android:textAppearance="@style/TextAppearance.Bold16" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="14dp"
                        android:text="Fabric Roll No."
                        android:textAppearance="@style/TextAppearance.Bold14" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="4dp" />

                    <TextView
                        android:id="@+id/etFabricRollNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="14dp"
                        android:gravity="center|left"
                        android:maxLines="1"
                        android:textStyle="bold"
                        android:text="24"
                        android:textAppearance="@style/TextAppearance.Bold16" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="14dp"
                        android:text="Fabric PO"
                        android:textAppearance="@style/TextAppearance.Bold14" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="4dp" />

                    <TextView
                        android:id="@+id/etFabricPO"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="14dp"
                        android:text="LBKA99NA89"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.Bold16" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="14dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_top_bottom"
                        android:orientation="horizontal"
                        android:paddingVertical="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="14dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Size"
                                android:textAppearance="@style/TextAppearance.Bold14" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="4dp" />

                            <TextView
                                android:textStyle="bold"
                                android:id="@+id/etSize"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="X"
                                android:textAppearance="@style/TextAppearance.Bold16" />
                        </LinearLayout>

                        <View
                            android:layout_width="1.2dp"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="8dp"
                            android:background="@android:color/darker_gray" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="14dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Layer"
                                android:textAppearance="@style/TextAppearance.Bold14" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="4dp" />

                            <TextView
                                android:textStyle="bold"
                                android:id="@+id/etLayer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20"
                                android:textAppearance="@style/TextAppearance.Bold16" />
                        </LinearLayout>
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="14dp"
                        android:text="Stock In"
                        android:textAppearance="@style/TextAppearance.Bold14" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:visibility="visible" />

                    <Spinner
                        android:id="@+id/sp_status"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_marginHorizontal="14dp"
                        android:background="@null"
                        android:hint="Status"
                        android:visibility="visible" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="14dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="14dp"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text="Transfer Type"
                            android:textAppearance="@style/TextAppearance.Bold14" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/btn_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="14dp"
                            android:gravity="center"
                            android:paddingLeft="54dp"
                            android:text="IN"
                            app:switchPadding="14dp" />
                    </LinearLayout>
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnBackToHome"
                    android:layout_width="127dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@android:color/holo_blue_light"
                    android:drawableLeft="@drawable/ic_home"
                    android:text="HOME"
                    android:textSize="16sp"
                    app:cornerRadius="0dp" />

                <Button
                    android:id="@+id/btnTransfer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@android:color/holo_green_light"
                    android:text="STOCK IN"
                    android:textSize="16sp"
                    app:cornerRadius="0dp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>