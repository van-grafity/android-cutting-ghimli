<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_layer"
                    android:layout_width="@dimen/menu_home_dimen"
                    android:layout_height="@dimen/menu_home_dimen"
                    android:layout_marginVertical="6dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="55dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_layers_yellow" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_layer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Layer"
                    android:textAppearance="@style/TextAppearance.Regular16"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_cutter"
                    android:layout_width="@dimen/menu_home_dimen"
                    android:layout_height="@dimen/menu_home_dimen"
                    android:layout_marginVertical="6dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="55dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_cut_yellow" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_cutter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Cutter"
                    android:textAppearance="@style/TextAppearance.Regular16"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_cut_piece_stock"
                    android:layout_width="@dimen/menu_home_dimen"
                    android:layout_height="@dimen/menu_home_dimen"
                    android:layout_marginVertical="6dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="55dp">

                    <ImageView

                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_stock_yellow" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_cut_piece_stock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Bundle"
                    android:textAppearance="@style/TextAppearance.Regular16"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_about"
                    android:layout_width="@dimen/menu_home_dimen"
                    android:layout_height="@dimen/menu_home_dimen"
                    android:layout_marginVertical="6dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="55dp">

                    <ImageView

                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_info_yellow" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Tentang"
                    android:textAppearance="@style/TextAppearance.Regular16"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</FrameLayout>